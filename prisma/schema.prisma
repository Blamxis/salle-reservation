generator client {
  provider = "prisma-client-js"
}

generator seed {
  provider = "node"
  run      = "./seed.js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  refreshToken String?
}

model Room {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  capacity    Int
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

